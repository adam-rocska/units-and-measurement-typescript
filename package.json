{
  "name": "@adam-rocska/units-and-measurement",
  "version": "1.0.0",
  "description": "TypeScript utility for handling numeric values with units, featuring unit conversion and unit-aware arithmetic operations.",
  "keywords": [
    "units",
    "measurement",
    "unit-conversion",
    "numeric-calculations",
    "quantities",
    "unit-aware",
    "type-safe",
    "types",
    "typescript",
    "ts",
    "js",
    "javascript",
    "node",
    "nodejs",
    "math",
    "dimension",
    "scaling",
    "measurement-units",
    "unit-operations",
    "unit-management"
  ],
  "author": {
    "name": "Ádám László Rocska",
    "url": "https://adam-rocska.github.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adam-rocska/units-and-measurement-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/adam-rocska/units-and-measurement-typescript/issues"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "bunchee",
    "test": "jest --env node",
    "check": "pnpm eslint && pnpm attw --pack"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.4",
    "@swc/jest": "^0.2.36",
    "@tsconfig/strictest": "^2.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.2.0",
    "bunchee": "^5.3.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "jest": "^29.7.0",
    "pnpm": "^9.7.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  },
  "files": [
    "dist",
    "shorthand"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/es/index.d.mts",
        "default": "./dist/es/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./shorthand": {
      "import": {
        "types": "./dist/es/shorthand.d.mts",
        "default": "./dist/es/shorthand.mjs"
      },
      "require": {
        "types": "./dist/cjs/shorthand.d.ts",
        "default": "./dist/cjs/shorthand.js"
      }
    }
  },
  "jest": {
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "@adam-rocska/units-and-measurement": "<rootDir>/src/index.ts",
      "@adam-rocska/units-and-measurement/shorthand": "<rootDir>/src/shorthand/index.ts",
      "^!(.*)": "<rootDir>/$1"
    },
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 1000
  },
  "packageManager": "pnpm@9.4.0"
}